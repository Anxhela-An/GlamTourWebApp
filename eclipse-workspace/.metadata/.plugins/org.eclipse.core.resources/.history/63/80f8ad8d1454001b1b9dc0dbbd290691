import java.util.*;
public class Vektoret
{ static int[] notat = new int[3];
static String [] Studente = new String [3];
    
	public static void mbushNotat()
	{ Scanner sc = new Scanner(System.in);
		
	  for(int i=0; i<notat.length;i++)
	{ System.out.println("Fut notat ne vektor: "+ (i+1));
      notat[i]=sc.nextInt();	
	}
	}
   public static void mbushStudente()
   {
	   Scanner sc= new Scanner(System.in);
	   for(int j=0; j<Studente.length;j++)
	   {   System.out.println("Fut studentet: ");
		   Studente[j]=sc.nextLine();
	   }
   }
   
 public static void notaMes(int []notat)
 {
	 int count = 0;
	 int sum=0;
	 for(int k=0; k<notat.length;k++)
	 {
		 sum=sum+notat[k];
		 count=count+1;
	 }
	 double mesatare= sum/count;
	 int numero=0;
	 for(int i=0; i<notat.length;i++)
	 {
		 if(mesatare>notat[i])
		 { numero++;
			 
		 }
	 }
	 System.out.println("Mesatarja eshte: "+mesatare);
	 System.out.println("Numri i studenteve me note nen mesatare: "+ numero);
 }
 public static void Mesatare_kaluese(int []notat)
 {
	 int count=0;
	 int sum=0;
	 for(int i=0; i<notat.length;i++)
	 {
		 if(notat[i]>4)
		 { sum=sum+notat[i];
		   count=count+1;
			 
		 }
	 }
	 double mesatare_kaluese=sum/count; 
	 System.out.println("Mesatarja kaluese eshte: "+mesatare_kaluese);
 }
 public static void Afisho(int []notat,String[ ] Studentet)
 { for(int i=0;i<Studentet.length;i++)
   { for(int j=0; j<notat.length;j++)
   {
	   System.out.println(Studentet[i]+ "ka noten "+ notat[j]);
   }
	 
   }
	 
 }

 
