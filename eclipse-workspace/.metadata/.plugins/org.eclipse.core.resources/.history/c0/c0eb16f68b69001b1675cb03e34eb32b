import javax.swing.*;
import java.awt.*;
import java.util.ArrayList;
import java.util.List;

public class ReservationApp extends JFrame {

    private static List<Udhetim> udhetimetELejuara;

    private void initializeUdhetimet() {
        udhetimetELejuara = new ArrayList<>();
        udhetimetELejuara.add(new Udhetim("Milan", "Tirana", 100.99));
        udhetimetELejuara.add(new Udhetim("Tirana", "Rome", 130.99));
        udhetimetELejuara.add(new Udhetim("Tirana", "Athens", 100.99));
        udhetimetELejuara.add(new Udhetim("Athens", "Frankfurt", 200.99));
        udhetimetELejuara.add(new Udhetim("Paris", "Tirana", 150.99));
        udhetimetELejuara.add(new Udhetim("Lisbon", "Nice", 106.99));
    }

    public ReservationApp() {
        super("Reservation App");
        setVisible(true);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setSize(700,500);
        JPanel pane = new JPanel(); //Create the content pane
        setContentPane(pane);

        this.add(menujaLart());
        initializeUdhetimet();
    }


    public static void main(String a[]) {
       new ReservationApp();
    }

    public List<String> retrieveNisjet(){
        return new ArrayList<>();
    }

    public JPanel menujaLart() {

        JPanel menuLart = new JPanel();

        menuLart.setLayout(new GridLayout(3,2));

        JTextField emri = new JTextField();
        JTextField mbiemri = new JTextField();
        JComboBox<String> nisja = new JComboBox<>(new String[]{"Tirana","Athens","Dortmund"});
        JComboBox<String> destinacioni = new JComboBox<>(new String[]{"Frankfurt","Rome","Nice"});

        // Buttonat
        ButtonGroup bgroup = new ButtonGroup();
        JRadioButton oneWay = new JRadioButton("One way");
        JRadioButton roundTrip = new JRadioButton("RoundTrip");
        bgroup.add(oneWay);
        bgroup.add(roundTrip);

        menuLart.add(emri);
        menuLart.add(mbiemri);
        menuLart.add(nisja);
        menuLart.add(destinacioni);
        menuLart.add(oneWay);
        menuLart.add(roundTrip);

        return menuLart;
    }

    public JPanel menujaPoshte() {
        JPanel menuPoshte = new JPanel();

        menuPoshte.setLayout(new GridLayout(3,2));

        JButton afisho = new JButton("Afisho");
        JButton rezervo = new JButton("Rezervo");

        menuPoshte.add(afisho);
        menuPoshte.add(rezervo);

        return menuPoshte;
    }
}