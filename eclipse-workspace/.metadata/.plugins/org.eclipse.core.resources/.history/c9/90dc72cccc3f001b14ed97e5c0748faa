public class KornizaTest3 
{  public static void main(String []args)
	{
	  JFrame korniza_ime=new JFrame();
	  korniza_ime.getContentPane().add(korniza_ime, new PaneliIm());
	   korniza_ime.pack();
		  korniza_ime.setTitle("Vizatues i kornizes");
